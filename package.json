{
  "name": "soul-shards",
  "version": "1.0.0",
  "description": "Encrypted Private Expense Log - Anonymous expense analysis with FHE",
  "main": "index.js",
  "scripts": {
    "build": "npm run compile && npm run test",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:sepolia": "hardhat test --network sepolia",
    "deploy": "hardhat deploy",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:local": "hardhat run scripts/deploy-local.ts",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "clean": "hardhat clean && rm -rf types artifacts cache",
    "analyze": "npm run compile && npm run test:coverage",
    "lint": "hardhat check",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "postcompile": "npm run typechain"
  },
  "keywords": [
    "fhevm",
    "zama",
    "expense",
    "encryption",
    "blockchain",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "hardhat": "^2.27.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0"
  }
}
